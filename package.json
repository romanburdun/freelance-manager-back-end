{
  "name": "Freelance_manager",
  "version": "0.0.1",
  "description": "Web application for freelancers' project and income management",
  "main": "server.js",
  "scripts": {
    "dev": "env-cmd -f ./config/dev.env nodemon server.js",
    "test": "env-cmd -f ./config/test.env jest --runInBand --verbose",
    "prod": "env-cmd -f ./config/prod.env pm2 start server.js --name fmb --update-env",
    "stop_prod": "pm2 stop fmb"
  },
  "keywords": [
    "freelance",
    "organizer",
    "project",
    "management",
    "finance"
  ],
  "author": "Roman Burdun",
  "license": "GPL-2.0-only",
  "dependencies": {
    "@sendgrid/mail": "^7.1.1",
    "archiver": "^3.1.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "env-cmd": "^10.1.0",
    "express": "^4.17.3",
    "express-fileupload": "^1.1.9",
    "express-mongo-sanitize": "^1.3.2",
    "express-rate-limit": "^5.1.3",
    "fast-csv": "^4.3.0",
    "helmet": "^3.22.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.16",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.8",
    "nodemon": "^2.0.4",
    "sanitize-html": "^2.3.2",
    "slugify": "^1.4.0"
  },
  "devDependencies": {
    "jest": "^26.0.1",
    "sinon": "^7.5.0",
    "supertest": "^4.0.2",
    "swagger-jsdoc": "^3.7.0",
    "swagger-ui-express": "^4.1.4"
  }
}
